function getMageBookLevel()
	local ret = t('LEVEL_LABEL').." "..currentSpellLevel

	return ret
end

function getMageBookSpellFraction()
	local ret = ""

	if #bookSpells > numberOfKnownMageSpellSlots then
		ret = (shownSpellOffset + 1) .. "/" .. math.floor(((#bookSpells / numberOfKnownMageSpellSlots) + 1))
	end

	return ret
end

function getMageBookSpellLevelFrame(level)
	local ret = 0

	if currentSpellLevel == level then
		ret = 2
	end

	return ret
end

function getMemorizedMageSpellSlotEnabled(slot)
	local ret = true

	if slot > characters[id].mageDetails[currentSpellLevel].maxMemorized then
		return false
	elseif characters[id].hasSorcererBook then
		return false
	end

	return ret
