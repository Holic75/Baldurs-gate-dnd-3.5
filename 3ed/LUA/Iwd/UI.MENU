	--initialize selected ability
	local i = 1
	while ( i < 4 ) do
		local ability = characters[id].equipment[selectedSlot].abilities[i]
		if(ability ~= nil) then
			if(ability.selected == 1) then
				selectedAbility = i
				return
			end
		end
		i = i + 1
	end
end

function getItemAbilityFrame(itemSlot)
	ret = 0

	if selectedAbility == itemSlot then
		ret = 2
	end

	return ret
end

